@page
@model InfocommSolutionsProject.Areas.Identity.Pages.Account.Manage.CreateModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Create";
}
<style>
.warning {
  padding: 15px;
  background-color: yellow;
  color: black ;
}
.alert {
  padding: 20px;
  background-color: #f44336;
  color: white;
}


.closebtn {
  margin-left: 15px;
  color: white;
  font-weight: bold;
  float: right;
  font-size: 22px;
  line-height: 20px;
  cursor: pointer;
  transition: 0.3s;
}

.closebtn:hover {
  color: black;
}
</style>
<h1>Create</h1>
<div class="container">
   
    
</div>
<h4>Payment</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        @{
            if (@HttpContext.Session.GetString("_PaymentInvalid") == "Yes")
            {
                 <div class="warning">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                    <strong>Kindly</strong> Add at least 1 Credit Card.
                 </div>
            }
        }
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentModel.CardNumber" class="control-label"></label>
                <input asp-for="PaymentModel.CardNumber"  class="form-control" />
                <span asp-validation-for="PaymentModel.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentModel.DateOfExpiry" class="control-label"></label>
                <input asp-for="PaymentModel.DateOfExpiry"  class="form-control"  id="startDate"/>
                <span asp-validation-for="PaymentModel.DateOfExpiry"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentModel.SecurityCode" class="control-label"></label>
                <input asp-for="PaymentModel.SecurityCode" class="form-control" />
                <span asp-validation-for="PaymentModel.SecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
   
    <script>
        //js below disable pass date
        function addZero(n) {
            return parseInt(n) >= 10 ? n.toString() : '0' + n;
        }
        let dateNow = new Date(),
            yearNow = dateNow.getFullYear(),
            monthNow = dateNow.getMonth()+1,
            dayNow = dateNow.getDate(),
            maxDate = addZero(yearNow) + '-' + addZero(monthNow) + '-' + addZero(dayNow);
        let inp = document.querySelector('#startDate');
      
        inp.setAttribute('min', maxDate);
       
    </script>
}
