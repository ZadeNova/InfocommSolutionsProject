@page
@model InfocommSolutionsProject.Pages.User_Management.BanModel
@{
    ViewData["Title"] = "Ban";
}<style>
    dt{
    color:pink}
</style>
<div class="container">
<h1>Ban Account </h1>

<h3>Are you sure you want to Ban this Account?</h3>
<div>
    <h4>Details of : @Model.account.Email</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.account.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.account.Email)
        </dd>
        <hr>
      <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.account.AccountStatus)
        </dt>
        <dd class="col-sm-10" style="margin-left: 200px;">
            @Html.DisplayFor(model => model.account.AccountStatus)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="account.Id" />
        <input type="submit" value="Ban" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
</div>

